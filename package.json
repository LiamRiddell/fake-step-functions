{
  "name": "fake-step-functions",
  "version": "0.4.0",
  "author": "Takamasa Oshikiri <mail@oshikiri.org>",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshikiri/fake-step-functions"
  },
  "keywords": [
    "aws",
    "stepfunctions",
    "step functions",
    "amazon states language",
    "test",
    "testing"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "prebuild": "prettier --check {src,test}/**/*.ts test/**/*.json",
    "build": "tsc",
    "format": "prettier --write {src,test}/**/*.ts test/**/*.json"
  },
  "main": "./dist/index.js",
  "dependencies": {
    "jsonpath": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^26",
    "@types/jsonpath": "^0.2.0",
    "@types/node": "^14",
    "jest": "^27.0.5",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/*.ts",
      "<rootDir>/test/helper/*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
